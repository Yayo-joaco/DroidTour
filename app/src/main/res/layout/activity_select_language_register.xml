<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Encabezado marrón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#865953"
        android:gravity="center_vertical">

        <!-- Ícono (puedes usar un drawable compatible) -->
        <ImageView
            android:id="@+id/iconoGuia"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_mountain" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Texto "Regresar" -->
            <TextView
                android:id="@+id/tvRegresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Texto principal -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro Guía de Turismo"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Card Blanco con borde azul -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        app:strokeColor="#0E74FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Texto de instrucción -->
            <TextView
                android:id="@+id/tvInstruccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Selecciona los idiomas que domina"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Campo de autocompletado para buscar/agregar idioma -->
            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/spinnerIdiomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Busca un idioma"
                android:inputType="none"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Grupo de chips para mostrar idiomas seleccionados -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupIdiomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleLine="false"
                app:chipSpacing="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
