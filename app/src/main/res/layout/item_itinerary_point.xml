<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="top">

    <!-- Timeline Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_primary" />

        <View
            android:id="@+id/view_timeline_line"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/light_gray"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plaza de Armas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_activity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visita a la plaza principal de Lima, conoce su historia y arquitectura colonial."
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="2dp" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ 45 minutos"
            android:textSize="12sp"
            android:textColor="@color/primary"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</LinearLayout>

